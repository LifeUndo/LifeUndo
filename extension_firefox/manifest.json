{
  "manifest_version": 2,
  "name": "GetLifeUndo",
  "description": "Undo last actions: text input, closed tabs, clipboard history.",
  "version": "0.3.7.17",
  "homepage_url": "https://getlifeundo.com",
  "browser_action": {
    "default_title": "GetLifeUndo",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "sessions",
    "clipboardRead"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "lifeundo@example.com",
      "strict_min_version": "109.0"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "default_locale": "en"
}

