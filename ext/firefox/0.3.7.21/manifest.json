{
  "manifest_version": 2,
  "name": "LifeUndo",
  "version": "0.3.7.21",
  "default_locale": "en",
  "description": "Restore form text, clipboard history and recently closed tabs. 100% local, no telemetry.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "lifeundo@example.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "sessions",
    "clipboardRead"
  ],
  "browser_action": {
    "default_title": "GetLifeUndo",
    "default_icon": "icons/32.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ]
}