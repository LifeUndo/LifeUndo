{
  "manifest_version": 2,
  "name": "LifeUndo",
  "description": "Undo last actions: text input, closed tabs, clipboard history.",
  "version": "0.3.7.11",
  "homepage_url": "https://lifeundo.ru/",
  "browser_action": {
    "default_title": "LifeUndo",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_specific_settings": {
    "gecko": {
      "id": "lifeundo@example.com",
      "strict_min_version": "109.0"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "default_locale": "en"
}
