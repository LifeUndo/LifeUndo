{
  "manifest_version": 3,
  "name": "LifeUndo",
  "version": "0.3.4",
  "default_locale": "en",
  "description": "Undo last actions: text inputs, closed tabs, clipboard history.",
  "permissions": ["storage"],
  "action": {
    "default_title": "LifeUndo",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "lifeundo@example.com",
      "strict_min_version": "109.0"
    }
  }
}
